@page
@model IndexModel

@{
    ViewData["Title"] = "Profile";
    ViewData["ActivePage"] = ManageNavPages.Index;
}

<style>
    body {
        background-color: #f8f9fa;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

    .container {
        margin-top: 50px;
    }

    .card {
        border: none;
        border-radius: 15px;
        box-shadow: 0 0 20px rgba(0, 0, 0, 0.1);
    }

    .card-header {
        background-color: #007bff;
        color: white;
        border-top-left-radius: 15px;
        border-top-right-radius: 15px;
        padding: 15px;
        text-align: center;
        font-size: 1.5rem;
        font-weight: bold;
    }

    .card-body {
        padding: 30px;
    }

    .form-floating {
        margin-bottom: 20px;
    }

    .form-control {
        border: 1px solid #ced4da;
        border-radius: 10px;
        padding: 12px 15px;
        font-size: 1rem;
    }

        .form-control:focus {
            border-color: #007bff;
            box-shadow: 0 0 0 0.2rem rgba(0, 123, 255, 0.25);
        }

    .btn-primary {
        background-color: #007bff;
        border: none;
        border-radius: 10px;
        padding: 12px 20px;
        font-size: 1rem;
        font-weight: bold;
        width: 100%;
        margin-top: 20px;
    }

        .btn-primary:hover {
            background-color: #0056b3;
        }

    .text-danger {
        font-size: 0.875rem;
    }
</style>

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header">@ViewData["Title"]</div>
                <div class="card-body">
                    <form id="profile-form" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                        <div class="form-floating">
                            <input asp-for="Username" class="form-control" placeholder="Please choose your username." disabled />
                            <label asp-for="Username" class="form-label">Username</label>
                        </div>
                        <div class="form-floating">
                            <input asp-for="Input.PhoneNumber" class="form-control" placeholder="Please enter your phone number." />
                            <label asp-for="Input.PhoneNumber" class="form-label">Phone Number</label>
                            <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
                        </div>

                        <div class="form-floating">
                            <input asp-for="Input.Faculty" class="form-control" placeholder="fakülte giriniz" />
                            <label asp-for="Input.Faculty" class="form-label">Faculty</label>
                            <span asp-validation-for="Input.Faculty" class="text-danger"></span>
                        </div>

                        <div class="form-floating">
                            <input asp-for="Input.Episode" class="form-control" placeholder="bölüm girin" />
                            <label asp-for="Input.Episode" class="form-label">Episode</label>
                            <span asp-validation-for="Input.Episode" class="text-danger"></span>
                        </div>



                       
                        <br />
                        <a asp-controller="Account" asp-action="ChangePassword">Şifremi Değiştir</a>

                        <br />

                        <button id="update-profile-button" type="submit" class="btn btn-lg btn-primary">Save</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
