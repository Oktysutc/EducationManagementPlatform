@page
@model RegisterConfirmationModel
@{
    ViewData["Title"] = "Kayıt onayı";
}

<h1>@ViewData["Title"]</h1>
@{
    if (@Model.DisplayConfirmAccountLink)
    {
<p>
           uygulamaya kayıt olmak istediğinize emin misiniz <a href="https://aka.ms/aspaccountconf"></a> 
           <a id="confirm-link" href="@Model.EmailConfirmationUrl">Hesabınızı onaylamak için buraya tıklayın</a>
</p>
    }
    else
    {
<p>
            Hesabınızı onaylamak için lütfen e-postanızı kontrol edin.
</p>
    }
}

