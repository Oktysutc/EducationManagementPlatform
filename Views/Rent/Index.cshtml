@model List<Rent>

<div class="container">
    <div class="row pt-3 pb-5">
        <h1>kiralamalar</h1>
    </div>
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Id</th>
                <th>Kullanıcı No</th>
                <th>Kurs No</th>
                <th>Kurs</th>
                <th>kira Ücreti</th>
                <th>Güncelle</th>
                <th>Sil</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var Rent in Model)
            {
                <tr>
                    <td>@Rent.Id</td>
                    <td>@Rent.StudentId</td>
                    <td>@Rent.CourseId</td>
                    <td>@Rent.Course.CourseName</td>
                    <td>@Rent.RentPrice</td>
                    <td>
                        <button class="btn btn-lg btn-dark" style="width:90px;" onclick="openUpdateModal('@Rent.Id')">Güncelle</button>
                    </td>
                    <td>
                        <button class="btn btn-lg btn-dark" style="width:90px;" onclick="openDeleteModal('@Rent.Id')">Sil</button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <div class="row pt-3 pb-2">
        <div>
            <button class="btn btn-lg btn-primary" onclick="openAddModal()">rezerve et</button>
        </div>
    </div>
</div>

<!-- Add Modal -->
<div id="addModal" class="modal fade" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">kiralama Ekle</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form id="addForm">
                    <div class="form-group">
                        <label for="CourseId">Kurs</label>
                        <select class="form-control" id="addCourseId" name="CourseId" required>
                            @foreach (var course in ViewBag.CourseList)
                            {
                                <option value="@course.Value">@course.Text</option>
                            }
                        </select>
                    </div>
                    <div class="form-group">
                        <label for="StudentId">Kullanıcı No</label>
                        <input type="number" class="form-control" id="addStudentId" name="StudentId" required>
                    </div>
                    <div class="form-group">
                        <label for="SalesPrice">Satış Ücreti</label>
                        <input type="number" class="form-control" id="addSalesPrice" name="SalesPrice" required>
                    </div>
                    <button type="submit" class="btn btn-primary">Ekle</button>
                </form>
            </div>
        </div>
    </div>
</div>

<!-- Update Modal -->
<div id="updateModal" class="modal fade" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Satın Alma Güncelle</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form id="updateForm">
                    <input type="hidden" id="updateId" name="Id">
                    <div class="form-group">
                        <label for="CourseId">Kurs</label>
                        <select class="form-control" id="updateCourseId" name="CourseId" required>
                            @foreach (var course in ViewBag.CourseList)
                            {
                                <option value="@course.Value">@course.Text</option>
                            }
                        </select>
                    </div>
                    <div class="form-group">
                        <label for="StudentId">Kullanıcı No</label>
                        <input type="number" class="form-control" id="updateStudentId" name="StudentId" required>
                    </div>
                    <div class="form-group">
                        <label for="RentPrice">kira Ücreti</label>
                        <input type="number" class="form-control" id="updateRentPrice" name="RentPrice" required>
                    </div>
                    <button type="submit" class="btn btn-primary">Güncelle</button>
                </form>
            </div>
        </div>
    </div>
</div>

<!-- Delete Modal -->
<div id="deleteModal" class="modal fade" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Kiralama Sil</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <p>Bu kiralamayı silmek istediğinizden emin misiniz?</p>
                <form id="deleteForm">
                    <input type="hidden" id="deleteId" name="Id">
                    <button type="submit" class="btn btn-danger">Sil</button>
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">İptal</button>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function openAddModal() {
            $('#addModal').modal('show');
        }

        function openUpdateModal(id) {
            $.get('/Rent/Get/' + id, function (data) {
                $('#updateId').val(data.id);
                $('#updateCourseId').val(data.courseId);
                $('#updateStudentId').val(data.studentId);
                $('#updateRentPrice').val(data.RentPrice);
                $('#updateModal').modal('show');
            });
        }

        function openDeleteModal(id) {
            $('#deleteId').val(id);
            $('#deleteModal').modal('show');
        }

        $('#addForm').submit(function (e) {
            e.preventDefault();
            var formData = $(this).serialize();
            $.post('/Rent/AddUpdate', formData, function (data) {
                location.reload();
            });
        });

        $('#updateForm').submit(function (e) {
            e.preventDefault();
            var formData = $(this).serialize();
            $.post('/Rent/AddUpdate', formData, function (data) {
                location.reload();
            });
        });

        $('#deleteForm').submit(function (e) {
            e.preventDefault();
            var formData = $(this).serialize();
            $.post('/Rent/Delete', formData, function (data) {
                location.reload();
            });
        });
    </script>
}
