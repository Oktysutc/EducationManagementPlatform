@model Buy
<form method="post">
    <input asp-for="Id" hidden />
    <div class="border pt-3 mt-5">
        <div class="row pb-3">
            <h2 class="text-dark">sipariş iptal</h2>

        </div>


        <div class="mb-3">
            <label asp-for="StudentId" class="p-0">kullanıcı no:</label>
            <input asp-for="StudentId" class="form-control" />
        </div>

        <div class="mb-3">
            <label asp-for="CourseId" class="p-0">kurs no:</label>
            <select asp-for="CourseId" asp-items="ViewBag.CourseList" class="form-select"></select>
        </div>
        
        <button type="submit" class="btn btn-lg btn-dark" style="width:200px;">satın alma işlemi iptal</button>
        <a asp-controller="Buy" asp-action="Index" class="btn btn-lg btn-dark" style="width:200px;">markete dön</a>
    </div>
</form>