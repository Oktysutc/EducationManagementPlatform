@{
    ViewData["Title"] = "İletişim Formu";
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <style>
        body {
            font-family: 'Arial', sans-serif;
            background-color: #f4f4f9;
            color: #333;
            margin: 0;
            padding: 0;
            line-height: 1.6;
        }

        h1 {
            color: #333;
            text-align: center;
            margin-top: 20px;
        }

        .contact-container {
            text-align: center;
            padding: 20px;
            margin-top: 20px;
        }

        .contact-info {
            margin-bottom: 20px;
            color: #001933;
        }

        .contact-button {
            display: inline-block;
            text-decoration: none;
            color: white;
            background-color: #001933;
            padding: 10px 20px;
            border-radius: 5px;
            transition: background-color 0.3s ease;
            margin-bottom: 10px;
        }

            .contact-button:hover {
                background-color: #004466;
            }

        .form-container {
            margin-top: 20px;
        }

        .form-input {
            display: block;
            width: 100%;
            padding: 10px;
            margin-bottom: 10px;
            border: 1px solid #ccc;
            border-radius: 5px;
            box-sizing: border-box;
        }

        .form-button {
            display: block;
            width: 100%;
            padding: 10px;
            border: none;
            border-radius: 5px;
            background-color: #001933;
            color: white;
            cursor: pointer;
            transition: background-color 0.3s ease;
        }

            .form-button:hover {
                background-color: #004466;
            }
    </style>
</head>
<body>
    <h1>@ViewData["Title"]</h1>
    <div class="contact-container">
        <div class="contact-info">
            <h3>Telefon: 05369473152</h3>
            <h3>Adres: İstanbul, Bahçelievler</h3>
            <h3>E-posta: oktysutc@gmail.com</h3>
        </div>
        <form id="contactForm" class="form-container" action="/submit_contact_form" method="post">
            <input type="text" id="fullName" name="fullName" class="form-input" placeholder="Mesajınız" required>
            <input type="tel" id="phoneNumber" name="phoneNumber" class="form-input" placeholder="Telefon Numaranız" required>
            <button type="submit" class="form-button">Bize Ulaşın</button>
        </form>
    </div>
</body>
</html>
